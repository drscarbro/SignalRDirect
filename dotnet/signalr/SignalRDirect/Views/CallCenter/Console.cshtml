<div class="jumbotron">
    <h1>
        Call Center Page
    </h1>
</div>

<div class="row">
    <div id="app">
        <div class="form-group">
            <form v-on:submit.prevent="addMessage">
                <input type="text" v-model="newMessage">
                <input class="btn btn-default" type="submit" value="Send">
            </form>
            <ul>
                <li v-for="message in messages">{{ message }}</li>
            </ul>
        </div>
        <div class="form-group">
            <form v-on:submit.prevent="join">
                <input class="btn btn-success" type="submit" value="Join">
            </form>
            <button class="btn btn-default" v-for="user in userList">{{ user }}</button>
        </div>
    </div>
</div>
<div class="row">
    <div id="blocks" class="col-lg-12" style="height: 200px">

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form action="/CallCenter/Dial">
        <div class="panel panel-primary col-lg-6 col-lg-offset-3">
            <div class="panel-heading">
                <h1>Phone Pad</h1>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="btn col-lg-4">
                        <h2>1</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>2</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>3</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="btn col-lg-4">
                        <h2>4</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>5</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>6</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="btn col-lg-4">
                        <h2>7</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>8</h2>
                    </div>
                    <div class="btn col-lg-4">
                        <h2>9</h2>
                    </div>      
                </div>
                <div class="row">
                    <div class="btn col-lg-4 col-lg-offset-4">
                        <h1>0</h1>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-6 col-lg-offset-3">
                            <div class="col-lg-6">
                                <button class="btn btn-lg btn-success" type="submit">Dial</button>
                            </div>
                            <div class="col-lg-6">
                                <button class="btn btn-lg btn-danger">End</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/vue/dist/vue.js"></script>

<script>
    (async function (){
        
        const connection = new signalR.HubConnectionBuilder().withUrl("/calls").build()
        const app = new Vue({
            el: "#app",
            data:{
                messages: [],
                newMessage: null,
                userList: []
            },
            methods:{
                async addMessage(){
                    await connection.invoke("Send", this.newMessage)
                    this.newMessage = null
                },
                async join(){
                    await connection.invoke("Join", "@User.Identity.Name")
                }
            }
        })

        connection.on("Send", message => {
            app.messages.push(message)
        })

        connection.on("AddUserList", message => {
                app.userList = message
        })

        await connection.start()
        
        console.log(connection)
    })()

    $(document).ready(function(){
        var i = 12

        while(i > 0){
            $("#blocks").append('<div class="col-lg-4" style="background-color: purple; height: 22%; margin: 2px">')
                i--
        }
    })
</script>